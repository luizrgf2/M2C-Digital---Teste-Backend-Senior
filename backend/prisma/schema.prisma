
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  email String  @unique
  password  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted Boolean @default(false)

  @@index([email])
  @@map("users")
}

model Company {
  id String @id
  name String
  document String 
  created_at  DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted  Boolean @default(false)

  @@map("companies")
}

model Campaign {
  id String @id
  name String 
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted Boolean

  @@map("campaigns")
}